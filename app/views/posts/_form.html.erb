<%= form_with(model: @post, :html => {:class => 'form_post'} ) do |form| %>
  <% if @post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% @post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="post_title">
    <%= form.text_field :title, placeholder: "Title" %>
  </div>

  <div class="post_body">
    <%= form.text_area :body, placeholder: "Write your posts here..." %>
  </div>

  <div class="posts_buttons">
    <div class="post__circle">
        <%= select_tag(:group_id, options_for_select(@group_options)) %>
    </div>
    <div class="post_submit">
      <%= form.submit%>
    </div>
  </div>
<% end %>
