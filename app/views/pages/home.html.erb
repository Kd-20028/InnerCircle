
<div class="header">
    <%= image_tag ("3.png")%>
   <% if user_signed_in? %>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, data: {turbo_method: :delete}%>
    <% else %>
        <%= link_to "Sign In", new_user_session_path%>
        <%= link_to "Sign Up", new_user_registration_path%>
    <% end %>
</div>


<div class="new_circle">
    <%= render partial: "groups/form", :group => @group %>
</div>

<div class="posts_menu">
    <div class="body_header">
        <div class="create_post">
            <%= render partial: "posts/form", :post => @post %>
        </div>
    </div>
    <%= render partial: "groups/feed" %>
</div>

<div class="your_circles">
    <div>Your Circles</div>
   <% current_user.groups.each do |group|%>
      <%= link_to group.name, group_path(group)%>
   <% end %>
</div>


